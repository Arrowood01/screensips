{
  "name": "screensips",
  "version": "1.0.0",
  "description": "AI-powered drinking game generator for movies and TV shows",
  "private": true,
  "scripts": {
    "dev": "cd 'Front End' && npm run dev",
    "build": "cd 'Front End' && npm run build",
    "preview": "cd 'Front End' && npm run preview",
    "lint": "cd 'Front End' && npm run lint",
    "clean": "rm -rf node_modules 'Front End/node_modules' 'Front End/dist'",
    "install:all": "npm install && cd 'Front End' && npm install",
    "setup": "npm run install:all && npm run build",
    "start": "npm run dev"
  },
  "keywords": [
    "drinking-games",
    "ai",
    "entertainment",
    "movies",
    "tv-shows",
    "cocktails",
    "party-games"
  ],
  "author": "Screen Sips Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/screensips.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/screensips/issues"
  },
  "homepage": "https://screensips.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}